@model RepositoryViewModel
<div class="row">
  <div class="large-3 columns">
    <ul class="side-nav">
      @foreach (var branch in Model.Branches)
      {
        <li class="active">@Html.ActionLink(branch, "Tree", "Repository", new { branch }, null)</li>
        <li class="divider"></li>
      }
    </ul>
  </div>
  <div class="large-9 columns">
    <h1 class="small-headline">@Model.RepositoryPath</h1>
    <div class="console">
      <code>git clone @Url.RepositoryCloneUrl(Model.RepositoryPath)</code>
    </div>
    @if (!string.IsNullOrEmpty(Model.ReadMe))
    {
      <hr/>
      @Html.RenderMarkdown(Model.ReadMe)
    }
  </div>
  </div>
</div>
